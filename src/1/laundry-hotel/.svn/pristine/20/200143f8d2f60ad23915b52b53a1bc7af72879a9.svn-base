<Window x:Class="ETextsys.Terminal.View.Business.BillInquiry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:lw="clr-namespace:ETextsys.Terminal.View.Choose"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ETextsys.Terminal.View.Business"
        mc:Ignorable="d" Style="{DynamicResource FuncWindow}"
        Title="BillInquiry"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <FrameworkElement x:Key="ProxyElement" DataContext="{Binding}"></FrameworkElement>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="126"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource Headerbg}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" Style="{DynamicResource FuncTitle}" Margin="0,0,0,25" Text="单据查询"></TextBlock>
            <Button Grid.Column="2" Style="{DynamicResource BackBtn}" Command="{Binding Close}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,15,15,0"></Button>
        </Grid>
        <Grid Grid.Row="1" Margin="20,0,20,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="10"></ColumnDefinition>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="250*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="1" Grid.Column="0" Visibility="{Binding Model.HotelVisbility}" Style="{DynamicResource FuncAttrTitle}" Text="酒店:"></TextBlock>
            <Button Grid.Row="1" Grid.Column="2" Visibility="{Binding Model.HotelVisbility}" Style="{DynamicResource ChooseBtn}" Content="{Binding Model.HotelName}" Command="{Binding ChooseAttrChanged}" CommandParameter="Hotel"></Button>

            <TextBlock Grid.Row="1" Grid.Column="3" Visibility="{Binding Model.HotelVisbility}" Style="{DynamicResource FuncAttrTitle}" Text="楼层:"></TextBlock>
            <Button Grid.Row="1" Grid.Column="5" Visibility="{Binding Model.HotelVisbility}" Style="{DynamicResource ChooseBtn}" Content="{Binding Model.RegionName}" Command="{Binding ChooseAttrChanged}" CommandParameter="Floor"></Button>

            <TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource FuncAttrTitle}" Text="时间:"></TextBlock>
            <Button Grid.Row="0" Grid.Column="2" Style="{DynamicResource ChooseBtn}" Content="{Binding Model.CreateTime}" Command="{Binding ChooseAttrChanged}" CommandParameter="Time"></Button>            
            <TextBlock Grid.Row="0" Grid.Column="1" Text="*" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="20"></TextBlock>

            <TextBlock Grid.Row="0" Grid.Column="3" Style="{DynamicResource FuncAttrTitle}" Text="单据类型:"></TextBlock>
            <Button Grid.Row="0" Grid.Column="5" Style="{DynamicResource ChooseBtn}" Content="{Binding Model.InvTypeName}" Command="{Binding ChooseAttrChanged}" CommandParameter="DocumentType"></Button>

            <TextBlock Grid.Row="1" Grid.Column="1" Visibility="{Binding Model.HotelVisbility}" Text="*" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="20"></TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="4" Visibility="{Binding Model.HotelVisbility}" Text="*" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="20"></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="*" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="20"></TextBlock>
            <Button Grid.Row="0" Grid.Column="7" Grid.RowSpan="2" Command="{Binding SelectInvoice}" IsEnabled="True" Style="{DynamicResource selectbut}" CommandParameter="{Binding ElementName=datagrid}" Content="查询">
            </Button>
            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="7" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="480"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="460"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="460"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ContentControl Visibility="Collapsed" Content="{StaticResource ProxyElement}"/>
                <Border Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3" BorderBrush="#A3CEFF" CornerRadius="6" BorderThickness="6">
                    <DataGrid Name="datagrid" Style="{DynamicResource DefaultGrid}" Height="445" ItemsSource="{Binding}" DataContext="{Binding Model.ResetTable}">
                        <DataGrid.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.ShowDetails,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window} }" CommandParameter="{Binding ElementName=datagrid,Path=SelectedItem}"></MouseBinding>
                        </DataGrid.InputBindings>
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                                        <Setter Property="Background" Value="#FFF" />
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F0F7FF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#D4E8FF"/>
                                <Setter Property="Foreground" Value="#0069F9" />
                                <Setter Property="Height" Value="34" />
                                <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
                                <Setter Property="FontSize" Value="18"></Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn   Width="205">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{DynamicResource icondanju}" Width="26" Height="26" Margin="10,0,10,0"></Image>
                                        <TextBlock Text="单据编号" FontSize="18"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Name="but"  CommandParameter="{Binding DocumentNumberparam }" Margin="0,4,0,0" Cursor="Hand">
                                                    <Button.Template>
                                                        <ControlTemplate>
                                                            <TextBlock Name="txt" TextDecorations="Underline" Text="{Binding Path=DocumentNumberparam}" Margin="5,0,0,0" FontFamily="微软雅黑" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                            </TextBlock>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="135">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{StaticResource iconzhidan}" Width="26" Height="26"  Margin="0,0,10,0"></Image>
                                        <TextBlock Text="制单人" FontSize="18"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=OneManparam}" Margin="5,0,0,0" FontFamily="微软雅黑" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="135">
                                <DataGridTemplateColumn.Header >
                                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                        <Image Source="{StaticResource iconjiudian}" Width="26" Height="26" Margin="0,0,10,0"></Image>
                                        <TextBlock Text="酒店" FontSize="18"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Hotelparam}" Margin="25,0,0,0" FontFamily="微软雅黑" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="125">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" Margin="40,0,0,0">
                                        <Image Source="{StaticResource icolouceng}" Width="26" Height="26"  Margin="0,0,10,0"></Image>
                                        <TextBlock Text="楼层" FontSize="18"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Floorparam}"  Margin="0,0,15,0" FontFamily="微软雅黑" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="165">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" Margin="40,0,0,0">
                                        <Image Source="{StaticResource iconshuliang}"  Width="26" Height="26" Margin="0,0,10,0"></Image>
                                        <TextBlock Text="订单数量" FontSize="18"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=OrderQuantityparam}" FontFamily="Arial" FontSize="18"  HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center"></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="175">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" Margin="90,0,0,0">
                                        <Image Source="{StaticResource iconshijian}" Width="26" Height="26"  Margin="0,0,10,0" HorizontalAlignment="Right"></Image>
                                        <TextBlock Text="时间" FontSize="18" HorizontalAlignment="Right"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=Timeparam}" Margin="0,0,10,0" FontFamily="微软雅黑" FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>
        <lw:LoadingWait Grid.RowSpan="3" Visibility="{Binding Model.WaitVisibled}" Tag="{Binding Model.WaitContent}"></lw:LoadingWait>
    </Grid>
</Window>
