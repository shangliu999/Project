@model ETexsys.Model.goods

<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">产品</h4>
            </div>
            <form class="form-horizontal" id="addGoodsForm">
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                        <label class="col-lg-2 control-label">产品名称</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.GoodsName, new { @class = "form-control", @required = "", @onblur = "CheckGoodsName(this)" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">分类</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="CateID">
                                @{ var cateList = ViewData["CateList"] as List<ETexsys.Model.goodscate>; }
                                @foreach (var item in cateList)
                                {
                                    <option value="@item.ID">@item.CateName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品图片</label>
                        <div class="col-lg-8">
                            <input type="file" class="file" id="file-logo" name="file-logo" />
                            <p class="help-block">支持jpg、jpeg、png格式，大小不超过2.0M</p>
                            <img id="logo" width="60px" src="" style="display:none;" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">市场价</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.CostPrice, new { @class = "form-control" })
                                <span class="input-group-addon">元</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">商城价格</label>
                        <div class="col-lg-10">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.GoodsMoney, new { @class = "form-control" })
                                <span class="input-group-addon">元</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品单位</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(m => m.UnitName, new { @class = "form-control" })
                            <p class="help-block">双、件、个 等</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">商品描述</label>
                        <div class="col-lg-8">
                            @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">是否上架</label>
                        <div class="col-lg-8">
                            <input id="Grounding" type="checkbox" checked="checked" data-size="small" data-on-text="是" data-off-text="否" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">排序</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Sort, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>



