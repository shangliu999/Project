
@model ETexsys.Model.textileclass

<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">品名</h4>
            </div>
            <form class="form-horizontal" id="addClassForm">
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                        <label class="col-lg-2 control-label">品名</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ClassName, new { @class = "form-control", @required = "", @onblur = "CheckClassName(this)" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">编码</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ClassCode, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">分类</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="CateID">
                                @{ var cateList = ViewData["CateList"] as List<ETexsys.Model.category>; }
                                @foreach (var item in cateList)
                                {
                                    <option value="@item.ID">@item.CateName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">单位</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="UnitID">
                                @{ var unitList = ViewData["UnitList"] as List<ETexsys.Model.unit>; }
                                @foreach (var item in unitList)
                                {
                                    <option value="@item.ID">@item.UnitName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">洗涤寿命</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ClassLeft, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">打扎数</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.PackCount, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">排序</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Sort, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label"></label>
                        <div class="col-lg-10">
                            <div class="i-checks"><label> <input type="checkbox" id="IsRFID" checked="checked" value=""> <i></i> 是否租赁 </label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">尺码</label>
                        <div class="col-lg-10">
                            @{ var sizeList = ViewData["SizeList"] as List<ETexsys.Model.size>;
                            }
                            @foreach (var item in sizeList)
                            {
                                <div class="i-checks" style="float:left; margin-right:20px;margin-top:5px;"><label> <input class="sizecheckbox" name="SizeID" type="checkbox" value="@item.ID"> <i></i>@item.SizeName</label></div>
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>
