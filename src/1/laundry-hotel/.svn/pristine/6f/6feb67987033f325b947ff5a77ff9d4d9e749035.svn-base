<Window x:Class="ETextsys.Terminal.View.QuerySummary.TextileDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ETextsys.Terminal.View.Choose"
        xmlns:lw="clr-namespace:ETextsys.Terminal.View.Choose"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d" Title="TaskDetails" WindowStartupLocation="CenterScreen" Background="Transparent"
        Style="{DynamicResource FuncWindow}" AllowsTransparency="True" ShowInTaskbar="False">
    <Grid>
        <StackPanel Width="1024" Height="768" Background="#000" Opacity="0.5"></StackPanel>

        <Button Style="{DynamicResource ModalCloseBtn}" Panel.ZIndex="1000" HorizontalAlignment="Right" Margin="0,8,15,0" VerticalAlignment="Top" Command="{Binding CloseModal}"></Button>

        <Border CornerRadius="30" Background="#FFF" Margin="10,0,10,0" Opacity="1" Height="700" Width="950" VerticalAlignment="Center">
            <StackPanel Margin="20,0,20,0">
                <StackPanel Height="50" VerticalAlignment="Center" Orientation="Vertical">
                    <TextBlock Text="纺织品追踪" Style="{DynamicResource ModalTitle}" HorizontalAlignment="Center" Margin="0,10,0,0"></TextBlock>
                </StackPanel>
                <Line X1="0" X2="900" Height="1" Stroke="#CCC" StrokeThickness="1"></Line>
                <Grid Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="300"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{DynamicResource FuncAttrTitle}" Text="名称:"></TextBlock>
                    <TextBlock Grid.Row="0" Grid.Column="2" Style="{DynamicResource FuncAttrTitle}" Text="尺寸:"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="0" Style="{DynamicResource FuncAttrTitle}" Text="投入时间:"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="2" Style="{DynamicResource FuncAttrTitle}" Text="洗涤次数:"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{DynamicResource FuncAttrTitle}" Text="芯片码:"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="2" Style="{DynamicResource FuncAttrTitle}" Text="芯片洗涤次数:"></TextBlock>

                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.ClassName}"></TextBlock>
                    <TextBlock Grid.Row="0" Grid.Column="3" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.SizeName}"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="1" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.CostTime}"></TextBlock>
                    <TextBlock Grid.Row="1" Grid.Column="3" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.TextileWashtime}"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="1" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.RFIDTagNo}"></TextBlock>
                    <TextBlock Grid.Row="2" Grid.Column="3" Style="{DynamicResource FuncAttrContext}" Text="{Binding Model.RFIDWashtime}"></TextBlock>
                </Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,20,10,-5" Panel.ZIndex="1000">
                    <Button Command="{Binding SingleCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="sp" Width="130" Height="56"  CornerRadius="30,0,0,0" VerticalAlignment="Center" Background="#FE0606" BorderThickness="1" BorderBrush="#A3CEFF">
                                    <TextBlock Name="lbl" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Text="收发记录" Foreground="#fff" FontFamily="Microsoft YaHei"></TextBlock>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Model.SingleBtnChoosed}" Value="true">
                                        <Setter TargetName="sp" Property="Background" Value="#FE0606"></Setter>
                                        <Setter TargetName="lbl" Property="Foreground" Value="#FFF"></Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Model.SingleBtnChoosed}" Value="false">
                                        <Setter TargetName="sp" Property="Background" Value="#F2F2F2"></Setter>
                                        <Setter TargetName="lbl" Property="Foreground" Value="#999"></Setter>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Command="{Binding AreaCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="sp" Width="130" Height="56"  CornerRadius="0,30,0,0" VerticalAlignment="Center" Background="#F2F2F2" BorderThickness="1" BorderBrush="#A3CEFF">
                                    <TextBlock Name="lbl" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0" Text="所有记录" Foreground="#999" FontFamily="Microsoft YaHei"></TextBlock>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <DataTrigger Binding="{Binding Model.AreaBtnChoosed}" Value="true">
                                        <Setter TargetName="sp" Property="Background" Value="#FE0606"></Setter>
                                        <Setter TargetName="lbl" Property="Foreground" Value="#FFF"></Setter>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Model.AreaBtnChoosed}" Value="false">
                                        <Setter TargetName="sp" Property="Background" Value="#F2F2F2"></Setter>
                                        <Setter TargetName="lbl" Property="Foreground" Value="#999"></Setter>
                                    </DataTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <Border Margin="0,0" BorderBrush="#A3CEFF" CornerRadius="6" BorderThickness="6">
                    <DataGrid Style="{DynamicResource DefaultGrid}" Height="355" ItemsSource="{Binding}" DataContext="{Binding Model.FlowTable}">
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="ItemsControl.AlternationIndex"  Value="0">
                                        <Setter Property="Background" Value="#FFF" />
                                    </Trigger>
                                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#F0F7FF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#D4E8FF"/>
                                <Setter Property="Foreground" Value="#0069F9" />
                                <Setter Property="Height" Value="34" />
                                <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
                                <Setter Property="FontSize" Value="16"></Setter>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn   Width="*">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{DynamicResource IconRegion}" Width="26" Height="26" Margin="5,0,5,0"></Image>
                                        <TextBlock Text="位置"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock  Text="{Binding Path=PositionName}" Margin="5,0,0,0" FontFamily="微软雅黑" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn   Width="*">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{DynamicResource IconSize}" Width="26" Height="26" Margin="0,0,5,0"></Image>
                                        <TextBlock Text="业务流程"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock  Text="{Binding Path=FlowName}" Margin="5,0,0,0" FontFamily="微软雅黑" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{DynamicResource iconzhidan}" Width="26" Height="26" Margin="0,0,10,0"></Image>
                                        <TextBlock Text="操作人"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=OperationUser}" FontFamily="微软雅黑" FontSize="16"  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="*">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{DynamicResource IconTime}" Width="26" Height="26" Margin="20,0,10,0"></Image>
                                        <TextBlock Text="操作时间"></TextBlock>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=OperationTime}" FontFamily="Arial" FontSize="18"  HorizontalAlignment="Right" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightBlue"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
