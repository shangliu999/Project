<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>RFID洗涤管理系统</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet">
    <!-- Toastr style -->
    @*<link href="css/plugins/toastr/toastr.min.css" rel="stylesheet">*@

    <!-- Gritter -->
    @*<link href="js/plugins/gritter/jquery.gritter.css" rel="stylesheet">*@

    <link href="@Url.Content("~/Content/animate.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/plugins/dataTables/datatables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/plugins/iCheck/custom.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span>
                                <img alt="image" class="img-circle" src="~/Images/logo.png" />
                            </span>
                        </div>
                        <div class="logo-element">
                            Etex
                        </div>
                    </li>

                    <li data-tag="Index">
                        <a href="@Url.Action("Index","SysAdmin")"><i class="fa fa-diamond"></i> <span class="nav-label">客户信息</span></a>
                    </li>
                    <li data-tag="Sys_Application">
                        <a href="@Url.Action("Sys_Application","SysAdmin")"><i class="fa fa-diamond"></i> <span class="nav-label">系统模块</span></a>
                    </li>
                    <li data-tag="Sys_Right">
                        <a href="@Url.Action("Sys_Right","SysAdmin")"><i class="fa fa-diamond"></i> <span class="nav-label">功能模板</span></a>
                    </li>
                </ul>

            </div>
        </nav>

        <!-- Mainly scripts -->
        <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/Scripts/plugins/metisMenu/jquery.metisMenu.js")"></script>
        <script src="@Url.Content("~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js")"></script>

        <script src="@Url.Content("~/Scripts/inspinia.js")"></script>
        <script src="@Url.Content("~/Scripts/plugins/pace/pace.min.js")"></script>

        <script src="@Url.Content("~/Scripts/plugins/dataTables/datatables.min.js")"></script>
        <script src="@Url.Content("~/Scripts/plugins/iCheck/icheck.min.js")"></script>
        <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")"></script>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>

                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">欢迎使用系统</span>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                                <i class="fa fa-envelope"></i>  <span class="label label-warning"></span>
                            </a>

                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                                <i class="fa fa-bell"></i>  <span class="label label-primary"></span>
                            </a>

                        </li>

                        <li>
                            <a href="@Url.Action("LogoutLogin", "SysAdmin")">
                            <i class="fa fa-sign-out"></i>注销
                            </a>
                        </li>

                    </ul>

                </nav>
            </div>
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2 id="htitle"></h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="@Url.Action("Index","SysAdmin")">主页</a>
                        </li>
                        <li class="active">
                            <strong id="stitle"></strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight">
                @RenderBody()

            </div>
        </div>

    </div>
    <script>
        $("#side-menu>li").removeClass("active");
        $("#side-menu>li[data-tag='@ViewBag.Tag']").addClass("active");
        $("#htitle,#stitle").html($("#side-menu .active").text());
    </script>
</body>
</html>