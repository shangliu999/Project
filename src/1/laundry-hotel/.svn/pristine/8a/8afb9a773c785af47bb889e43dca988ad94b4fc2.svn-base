@model ETexsys.Model.scrap

<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">报废原因</h4>
            </div>
            <form class="form-horizontal" id="addScrapForm">
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                        <label class="col-lg-2 control-label">报废原因</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ScrapName, new { @class = "form-control", @required = "", @onblur = "CheckScrapName(this)" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">报废类型</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="ScrapType">
                                <option value="1">正常</option>
                                <option value="2">异常</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">描述</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.ScrapDesc, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>



