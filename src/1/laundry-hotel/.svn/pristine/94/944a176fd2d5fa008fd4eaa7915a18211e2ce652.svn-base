@{
    Layout = null;
}
@using ETexsys.Model
@using ETexsys.WebApplication.Areas.Customer.Models
@model List<OrderDetailsModel>
<link href="@Url.Content("~/Content/plugins/datapicker/datepicker3.css")" rel="stylesheet" />

<div class="row wrapper wrapper-content animated fadeInRight" style="padding-top:75px;">
    <div class="ibox-content">
        <div>
            <h1>外包收货</h1>
        </div>
        <div class="ibox-content">
            <form class="form-horizontal" id="OrderForm">
                <div class="form-group">
                    <label class="col-lg-2 control-label">酒店：</label>
                    <div class="col-lg-2">
                        <select class="form-control" name="HotelID" id="HotelID" onchange="onCusChange()">
                            @foreach (var item in ViewData["HotelList"] as List<region>)
                            {
                                <option value="@item.ID">@item.RegionName</option>
                            }
                        </select>
                    </div>
                    <label class="col-lg-2 control-label">区域：</label>
                    <div class="col-lg-2">
                        <select class="form-control" name="RegionID" id="RegionID"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-2 control-label">时间：</label>
                    <div class="col-lg-2"  style="display:table;width:191px;">
                        <input type="text" class="form-control" id="dateTime" name="dateTime" value="" />
                        <span class="input-group-addon">
                            <i class="fa fa-calendar bigger-110"></i>
                        </span>
                    </div>
                </div>
                    @for (int i = 0; i < Model.Count; i += 2)
                    {
                        OrderDetailsModel item1 = Model[i];
                        if (i + 1 > Model.Count - 1)
                        {
                            <div class="form-group">
                                <div class="col-lg-2 control-label">
                                    @item1.TextileName @item1.SizeName
                                </div>
                                <div class="col-lg-2">
                                    <input type="text" id="@item1.AreaID|@item1.SizeID" name="@item1.AreaID|@item1.SizeID" data-area="@item1.TextileName" data-size="@item1.SizeName" value="@item1.Count" />
                                </div>
                            </div>
                            break;
                        }
                        else
                        {
                            <div class="form-group">
                                <div class="col-lg-2 control-label">
                                    @item1.TextileName @item1.SizeName
                                </div>
                                <div class="col-lg-2">
                                    <input type="text" id="@item1.AreaID|@item1.SizeID" name="@item1.AreaID|@item1.SizeID" data-area="@item1.TextileName" data-size="@item1.SizeName" value="@item1.Count" />
                                </div>
                                @{ OrderDetailsModel item2 = Model[i + 1];
                                }
                                <div class="col-lg-2 control-label">
                                    @item2.TextileName @item2.SizeName
                                </div>
                                <div class="col-lg-2">
                                    <input type="text" id="@item2.AreaID|@item2.SizeID" name="@item2.AreaID|@item2.SizeID" data-area="@item2.TextileName" data-size="@item2.SizeName" value="@item2.Count" />
                                </div>
                            </div>
                                        }
                                    }
                    <br />

                    <div class="form-group">
                        <label class="col-lg-2 control-label" style="text-align: right;">备注：</label>
                        <div class="col-lg-5">
                            <textarea name="note" id="note" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <br />
                    <div class="form-group" style="text-align:center;">
                        <button class="btn btn-success" type="button" id="btnSubmit"><i class="fa fa-save"></i>提交</button>
                        <button class="btn btn-danger" type="button" id="btnCancel"><i class="fa fa-remove"></i>取消</button>
                        <input type="hidden" name="InvID" id="InvID" value="@ViewData["ID"]" />
                    </div>
</form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/plugins/datapicker/bootstrap-datepicker.js")"></script>
<script src="@Url.Content("~/Scripts/plugins/datapicker/bootstrap-datepicker.zh-CN.js")"></script>
<script>
    // 对Date的扩展，将 Date 转化为指定格式的String
    // 月(M)、日(d)、小时(h)、分(m)、秒(s)、季度(q) 可以用 1-2 个占位符，
    // 年(y)可以用 1-4 个占位符，毫秒(S)只能用 1 个占位符(是 1-3 位的数字)
    // 例子：
    // (new Date()).Format("yyyy-MM-dd hh:mm:ss.S") ==> 2006-07-02 08:09:04.423
    // (new Date()).Format("yyyy-M-d h:m:s.S")      ==> 2006-7-2 8:9:4.18
    Date.prototype.format = function (fmt) { //author: meizz
        var o = {
            "M+": this.getMonth() + 1, //月份
            "d+": this.getDate(), //日
            "h+": this.getHours(), //小时
            "m+": this.getMinutes(), //分
            "s+": this.getSeconds(), //秒
            "q+": Math.floor((this.getMonth() + 3) / 3), //季度
            "S": this.getMilliseconds() //毫秒
        };
        if (/(y+)/.test(fmt)) fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
        for (var k in o)
            if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
        return fmt;
    };
    $(document).ready(function () {
        var d = new Date();
        $('#dateTime').val(d.format("yyyy-MM-dd"));

        $('#dateTime').datepicker({
            language: "zh-CN",
            autoclose: true,//选中之后自动隐藏日期选择框
            clearBtn: false,//清除按钮
            todayBtn: false,//今日按钮
            format: "yyyy-mm-dd",//日期格式
            endDate: new Date(),
        }).on('show', function (e) {
            $(".datepicker").css("z-Index", "2100");
        });
    });


    function onCusChange(type) {
        var hotelId = $("#HotelID").val();
        var url = "@Url.Action("GetRegionList", "Receiving")";
        if (!!hotelId) {
            $.ajax({
                type: "post",
                data: { hotelID: hotelId },
                url: url,
                success: function (result) {
                    reigonList = result.Data;

                    $("#RegionID").children().remove();
                    var options = '';
                    $.each(result, function (i, item) {
                        options += '<option value="' + item.ID + '">' + item.RegionName + '</option>';
                    });
                    $("#RegionID").append(options);

                    $("#RegionID").val("@ViewData["RegionID"]");
                    var id = $("#InvID").val();
                    if (id != null && id != "" && id != undefined) {
                        $("#HotelID,#RegionID,#dateTime").attr("disabled", "disabled");
                    }
                }
            });
        }
    }

    $(function () {
        $("#HotelID").val("@ViewData["HotelID"]");
        $("#dateTime").val("@ViewData["Date"]");
        $("#HotelID").change();
    });

    $("#btnSubmit").click(function () {
        var hotelId = $("#HotelID").val();
        var regionId = $("#RegionID").val();
        var info, item, txt, total = 0, temp = [], array = [];

        if (hotelId == undefined || hotelId == 0) {
            swal("提示", "请选择酒店.");
            return false;
        }

        if (regionId == undefined || regionId == 0) {
            swal("提示", "请选择楼层.");
            return false;
        }
        if ($("#dateTime").val() == "") {
            swal("提示", "请选择时间.");
            return;
        }
        $("#OrderForm input[type='text']").each(function (i, item) {
            txt = parseInt($(item).val());
            if (txt > 0 && $(item).attr("id") != "dateTime") {
                info = $(item).attr("id");
                temp = info.split("|");
                item = { "AreaID": temp[0], "SizeID": temp[1], "TextileName": $(item).data("area"), "SizeName": $(item).data("size"), "Count": txt };
                array.push(item);
                total += txt;
            }
        });
        if (total == 0) {
            swal("提示", "请输入数量后再提交.");
            return false;
        }

        var url = "@Url.Action("Add", "Receiving")";
        var v = { "HotelID": hotelId, "RegionID": regionId, "Quantity": total, "Remrak": $("#note").val(), "Data": array, "InvCreateTime": $("#dateTime").val() };

        var id = $("#InvID").val();
        if (id != null && id != "" && id != undefined) {
            url = "@Url.Action("Update", "Receiving")";
            v.ID = id;
        }


        $.ajax({
            type: "post",
            data: v,
            dataType: "json",
            url: url,
            success: function (result) {
                if (result.ResultCode == 0) {
                    swal("提示", "提交成功.");
                } else {
                    swal("提示", "提交失败.");
                }
                return false;
            }
        });
    });

    $("#btnCancel").click(function () {
        $("#OrderForm input").val("");
        $("#dateTime").val("@ViewData["Date"]");
    });
</script>
