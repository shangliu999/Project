<UserControl x:Class="ETextsys.Terminal.View.Settings.ReaderSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ETextsys.Terminal.View.Settings"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
         Height="642" Width="874">
    <UserControl.Resources>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="False" />
            <Setter Property="FocusVisualStyle" Value="{DynamicResource CheckBoxFocusVisual}" />
            <Setter Property="Height" Value="25"/>
            <Setter Property="IsChecked" Value="False"/>
            <Setter Property="Margin" Value="0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Height}">
                                <Rectangle x:Name="CheckBoxRectangle" Fill="LightSkyBlue" Opacity="0.3" RadiusY="5" RadiusX="5"/>
                                <Rectangle x:Name="CheckBoxRectangleOut" Stroke="#FF06DAD1" StrokeThickness="1" RadiusY="5" RadiusX="5"/>
                                <Grid x:Name="CheckedMark" Width="20" Height="20" Visibility="Collapsed">
                                    <Path SnapsToDevicePixels="False" StrokeThickness="3" Data="M1,9 L10,17" Stroke="White"/>
                                    <Path SnapsToDevicePixels="False" StrokeThickness="3" Data="M8,17 L20,4" Stroke="White"/>
                                </Grid>
                            </Grid>
                            <TextBlock Grid.Column="1" Text="{TemplateBinding Content}" FontSize="28" VerticalAlignment="Center" Margin="14,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedMark" Property="Visibility" Value="Visible"></Setter>
                                <Setter TargetName="CheckBoxRectangle" Property="Fill" Value="#FF00A8E0"></Setter>
                                <Setter TargetName="CheckBoxRectangle" Property="Opacity" Value="1"></Setter>
                                <Setter TargetName="CheckBoxRectangleOut" Property="Stroke" Value="Transparent"></Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="读写器：" Style="{StaticResource lblSubTitle}"></Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="ReaderType" Style="{StaticResource cmbStyle}" ItemsSource="{Binding Model.ReaderTypeData}" SelectedIndex="{Binding Model.ReaderType}">

        </ComboBox>
        <Label Grid.Row="1" Grid.Column="0" Content="连接方式：" Style="{StaticResource lblSubTitle}"></Label>
        <ComboBox Grid.Row="1" Grid.Column="1" Name="ConnType" Style="{StaticResource cmbStyle}" ItemsSource="{Binding Model.ConnTypeData}" SelectedIndex="{Binding Model.ConnType}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding SelectionChangedCmd}"  
                             CommandParameter="{Binding ElementName=ConnType}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>
        <Label Name="lblIP" Grid.Row="2" Grid.Column="0" Content="{Binding Model.IPTitle}" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="2" Style="{StaticResource borderstyle1}">
            <TextBox Name="IPAddress" Style="{StaticResource txtstyle1}" Text="{Binding Model.IPAddress}" Visibility="{Binding Model.Visibles[0]}"></TextBox>
        </Border>
        <ComboBox Grid.Row="2" Grid.Column="1" Name="COM" Style="{StaticResource cmbStyle}" Visibility="{Binding Model.Visibles[1]}" ItemsSource="{Binding Model.Coms}" SelectedItem="{Binding Model.COM}">

        </ComboBox>
        <Label Grid.Row="3" Grid.Column="0" Content="天线：" Style="{StaticResource lblSubTitle}"></Label>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox Name="ANT0" Content="0" Margin="10,0,0,0" IsChecked="{Binding Model.Antennas[0]}"/>
            <CheckBox Name="ANT1" Content="1" Margin="30,0,0,0" IsChecked="{Binding Model.Antennas[1]}"/>
            <CheckBox Name="ANT2" Content="2" Margin="30,0,0,0" IsChecked="{Binding Model.Antennas[2]}"/>
            <CheckBox Name="ANT3" Content="3" Margin="30,0,0,0" IsChecked="{Binding Model.Antennas[3]}"/>
        </StackPanel>
        <Label Grid.Row="4" Grid.Column="0" Content="功率：" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="4" Style="{StaticResource borderstyle1}">
            <TextBox Name="AntennaPower" Style="{StaticResource txtstyle1}" Text="{Binding Model.AntennaPower}"></TextBox>
        </Border>
        <Label Grid.Row="5" Grid.Column="0" Content="频段：" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="5" Style="{StaticResource borderstyle1}">
            <TextBox Name="Frepuency" Style="{StaticResource txtstyle1}" Text="{Binding Model.Frepuency}"></TextBox>
        </Border>
        <Label Grid.Row="6" Grid.Column="0" Content="用户名：" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="6" Style="{StaticResource borderstyle1}">
            <TextBox Name="UserName" Style="{StaticResource txtstyle1}" Text="{Binding Model.UserName}"></TextBox>
        </Border>
        <Label Grid.Row="7" Grid.Column="0" Content="密码：" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="7" Style="{StaticResource borderstyle1}">
            <TextBox Name="Password" Style="{StaticResource txtstyle1}" Text="{Binding Model.Password}"></TextBox>
        </Border>
        <Label Grid.Row="8" Grid.Column="0" Content="{Binding Model.HostIPTitle}" Style="{StaticResource lblSubTitle}"></Label>
        <Border Grid.Column="1" Grid.Row="8"  Style="{StaticResource borderstyle1}">
            <TextBox Name="HostIPAddress" Style="{StaticResource txtstyle1}" Text="{Binding Model.HostIPAddress}"></TextBox>
        </Border>
        <Label Grid.Row="9" Grid.Column="0" Content="读取模式：" Style="{StaticResource lblSubTitle}"></Label>
        <ComboBox Grid.Row="9" Grid.Column="1" Style="{StaticResource cmbStyle}" ItemsSource="{Binding Model.ScanModes}"
                  SelectedIndex="{Binding Model.ReaderMode}" DisplayMemberPath="Name" SelectedValuePath="Val">
        </ComboBox>
        <Grid Grid.Row="10" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Background="{DynamicResource ToolsBottom}" Height="92">
            <Grid Width="500" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Style="{DynamicResource SubmitBtn}" HorizontalAlignment="Right"  Command="{Binding SaveCommond}"></Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
