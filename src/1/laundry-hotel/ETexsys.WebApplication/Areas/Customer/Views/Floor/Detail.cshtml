@model ETexsys.Model.region
<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">楼层</h4>
            </div>
            <form class="form-horizontal" id="addFloorForm">
                <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(m => m.ID)
                        <label class="col-lg-2 control-label">楼层</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.RegionName, new { @class = "form-control", @required = "", @maxlength = "30", @onblur = "CheckFloorName(this)" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">配货依据</label>
                        <div class="col-lg-10" id="SendModel">
                            <div class="i-checks" style="float:left;"><label> <input type="radio" checked="" value="1" name="a" ><i></i>污物送洗</label></div>
                            <div class="i-checks" style="float:left; margin-left:5px;"><label> <input type="radio" checked="" value="2" name="a"> <i></i>订单</label></div>
                            <div class="i-checks" style="float:left; margin-left:5px;"><label> <input type="radio" checked="" value="3" name="a"> <i></i>污物送洗+订单</label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">联系人</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.LinkMan, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">电话</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Tel, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">排序</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(m => m.Sort, new { @class = "form-control", @type = "number" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-primary">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>

