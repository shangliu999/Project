
@{
    ViewBag.Title = "入厂";
}

<div class="child">
    <div class="table-responsive dataTables_wrapper" id="dataReport">
    </div>
</div>

<script>
    $(document).ready(function () {
        getdata();

        setInterval(function () {
            getdata();
        }, 1000 * 3);
    });

    function getdata() {
        var _url = "@Url.Action("GetInfactory", "Warehouse")";

        $.ajax({
            type: "post",
            data: {},
            url: _url + "?t=" + new Date().getTime(),
            cache: false,
            beforeSend: function () {
                $("#dataReport").children().remove();
                var div = $("<div></div>").addClass("list-group").css({ "margin-top": "20%", "width": "70%", "text-align": "center" });
                var label = $("<label style='font-size:48px;'>加载中...</label>");
                div.append(label);
                $("#dataReport").append(div);
            },
            success: function (result) {
                var it, table, thread, tr;

                table = $("<table></table>").addClass("table").addClass("table-bordered").addClass("table-hover");
                tr = $("<tr></tr>");
                $("<th style='text-align:left;'>酒店</th>").appendTo(tr);
                $("<th style='text-align:right;'>收货数</th>").appendTo(tr);
                $("<th style='text-align:right;'>入厂数</th>").appendTo(tr);
                $("<th style='text-align:left;'>状态</th>").appendTo(tr);
                $("<th style='text-align:left;'>物流人员</th>").appendTo(tr);
                $(table).append(tr);

                for (var j = 0; j < result.length; j++) {
                    it = result[j];
                    tr = $("<tr></tr>");
                    $("<td style='text-align:left;padding-right:5px;'>" + it.HotelName + "</td>").appendTo(tr);
                    $("<td style='text-align:right;padding-right:5px;'>" + it.Rec + "</td>").appendTo(tr);
                    $("<td style='text-align:right;padding-left:0px;padding-right:5px;'>" + it.InF + "</td>").appendTo(tr);
                    $("<td style='text-align:left;padding-right:5px;'>" + (it.InF > 0 ? "已入厂" : "未入厂") + "</td>").appendTo(tr);
                    $("<td style='text-align:left;padding-left:5px'>" + it.Handler + "</td>").appendTo(tr);
                    $(table).append(tr);
                }

                $("#dataReport").children().remove();
                $("#dataReport").append(table);
            }
        });
    }

</script>
