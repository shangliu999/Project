<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--主界面标题-->
    <Style TargetType="TextBlock" x:Key="txtMainTitle">
        <Setter Property="FontFamily" Value="MicrosoftYaHei Bold"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Foreground" Value="#0069f9"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    
    <!--页面标题-->
    <Style TargetType="TextBlock" x:Key="FuncTitle">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="30"></Setter>
        <Setter Property="Foreground" Value="#FFF"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    </Style>

    <!--页面属性-->
    <Style TargetType="TextBlock" x:Key="FuncAttrTitle">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter> 
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="#0069F9"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="0,0,5,0"></Setter>
    </Style>

    <!--页面内容-->
    <Style TargetType="TextBlock" x:Key="FuncAttrContext">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Foreground" Value="#0069F9"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>

    <!--Grid 外部标题-->
    <Style TargetType="TextBlock" x:Key="GridOutTitle">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Foreground" Value="#000"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>
    
    <!--未登记-->
    <Style TargetType="TextBlock" x:Key="UnRegister">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Foreground" Value="#fd0606"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter> 
        <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>

    <!--已登记 & 合计-->
    <Style TargetType="TextBlock" x:Key="Registed">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="Foreground" Value="#0E9A66"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter> 
        <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>

    <!--下方模态窗体标题-->
    <Style TargetType="TextBlock" x:Key="ModalTitle">
        <Setter Property="FontFamily" Value="Microsoft YaHei"></Setter>
        <Setter Property="FontSize" Value="26"></Setter>
        <Setter Property="Foreground" Value="#0069F9"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="Margin" Value="5,0,0,0"></Setter>
    </Style>

    <Style TargetType="TextBlock" x:Key="denglu">
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    <Style x:Key="tuichu" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Foreground" Value="#288DFF"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="fanhui" >
        <Setter Property="FontFamily" Value="新宋体"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="#288dff"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="selecttxt">
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="Foreground" Value="#ffffff"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,25,0,0"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="Page">
        <Setter Property="FontFamily" Value="微软雅黑"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>